@model IEnumerable<Health_Consulting_And_eChanneling.Models.ViewModels.Account.UserViewModel>

@{
    ViewBag.Title = "LastRegisteredDoctor";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>LastRegisteredDoctor</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Profile Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            <img style="border-radius: 50%; width:100px; height:100px" src="~/Content/Registration/Doctors/@item.Id/Thumbs/@item.ProfileImage" alt="@item.ProfileImage" />
        </td>
        <td>
            @Html.ActionLink("Edit", "update-registration", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
