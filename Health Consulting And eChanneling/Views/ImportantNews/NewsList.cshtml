@model IEnumerable<Health_Consulting_And_eChanneling.Models.ViewModels.News.NewsViewModel>

@{
    ViewBag.Title = "NewsList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>NewsList</h2>

<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="~/important-news/@item.Slug"><img src="~/Content/News/Images/@item.Id/Thumbs/@item.Image" alt="@item.Image" /></a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.Raw(item.Content)
        </td>
        <td>
            @Html.ActionLink("More >>", "Details", new { id = item.Id }, new { @class="btn btn-info btn-xs"}) 
        </td>
    </tr>
}

</table>
