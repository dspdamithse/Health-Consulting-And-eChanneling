<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -hConsulting & eChanneling</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">
    @Styles.Render("~/Content/healhConsultCSS")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header" class="fixed-top">
        <div class="container">

            <div class="logo float-left">
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <h1 class="text-light"><a href="#header"><span>NewBiz</span></a></h1> -->
                <a href="/" class="scrollto">
                    <img src="~/Content/images/logox.png" />
                </a>
            </div>

            <nav class="main-nav float-right d-none d-lg-block">
                <ul id="SideList">
                    <li id="home"><a href="/">Home</a></li>
                    <li id="doctor"><a href="~/our-doctors/all-doctors">Doctors</a></li>
                    <li id="service"><a href="~/medical-services/all-services">Medical Service</a></li>
                    <li id="appointment"><a href="~/medical-services/all-services">Appointment</a></li>
                    <li id="news"><a href="~/important-news/all-news-articals">News</a></li>



                    <li class="drop-down">
                        <a>Account Info</a>
                        <ul>
                            <li>
                                @if (Request.IsAuthenticated && (User.IsInRole("User") || User.IsInRole("Doctor")))
                                {
                                    if (ViewBag.Title == "User Profile")
                                    {
                                    <li class="active">@Html.Action("UserNavPartial", "Account")</li>
                                }
                                else
                                {
                                    <li>@Html.Action("UserNavPartial", "Account")</li>
                                }
                            }
                        </li>
                        @if (Request.IsAuthenticated)
                        {
                            <li><a href="/account/logout">Logout</a></li>
                        }
                        else
                        {
                            if (ViewBag.Title == "Login")
                            {
                                <li class="active"><a href="/account/login">Login</a></li>
                            }
                            else
                            {
                                <li><a href="/account/login">Login</a></li>
                            }

                        }
                        <li><a href="#">Drop Down 3</a></li>
                    </ul>
                    </li>
                    </ul>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="nav navbar-nav navbar-right adminarea">
                            <a class="btn btn-success" href="~/Administrator/dashboard">Dashboard</a>
                        </ul>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Doctor"))
                    {
                        <ul class="nav navbar-nav navbar-right adminarea">
                            <a class="btn btn-success" href="~/Administrator/dashboard">Dashboard</a>
                        </ul>
                    }

                </nav><!-- .main-nav -->

            </div>
        </header><!-- #header -->
        @if (ViewBag.Title == "Home")
        {
            <br /><br />
            <br /><br />
            <div style="margin: 0px 2em;" id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/HealthConsultAllCSS/css/main_img.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/HealthConsultAllCSS/css/home_img2.jpg" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/HealthConsultAllCSS/css/home_img3.jpg" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <br /><br />

            <section id="services">
                <div class="container service_container">
                    <div class="box first">
                        <div class="row">
                            <div id="home_section_one" class="col-md-4 col-sm-6 animated fadeIn">
                                <div class="center">
                                    <a href="~/our-doctors/all-doctors"><img class="img-responsive icon-md icon-color1" src="~/Content/HealthConsultAllCSS/img/doctor.jpg" /></a>
                                    <h4 class="home_service_h4">Doctors</h4>
                                    <p class="service_home_p">We have the best doctors in your area, see the doctors information, available time and other informations</p>
                                </div>
                            </div><!--/.col-md-4-->
                            <div id="home_section_two" class="col-md-4 col-sm-6 animated fadeIn">
                                <div class="center">
                                    <a href="~/medical-services/all-services"><img class="img-responsive icon-md icon-color2" src="~/Content/HealthConsultAllCSS/img/medical-services.jpg" /></a>
                                    <h4 class="home_service_h4">Medical Services</h4>
                                    <p class="service_home_p">See our medical services, price list, available times and other informations</p>
                                </div>
                            </div><!--/.col-md-4-->
                            <div id="home_section_three" class="col-md-4 col-sm-6 animated fadeIn">
                                <div class="center">
                                    <a href="~/medical-services/all-services"><img class="img-responsive icon-md icon-color3" src="~/Content/HealthConsultAllCSS/img/appointment.jpg" /></a>
                                    <h4 class="home_service_h4">Appointment</h4>
                                    <p class="service_home_p">You can appointment with our docors or medical check up times, pick the doctors or medical service then appoinment, we will confirm your appoinment</p>
                                </div>
                            </div><!--/.col-md-4-->
                            <div id="home_section_four" class="col-md-4 col-sm-6">
                                <div class="center">
                                    <a href="~/medical-services/all-services"><img class="img-responsive icon-md icon-color4" src="~/Content/HealthConsultAllCSS/img/medicalhistoryform.jpg" /></a>
                                    <h4 class="home_service_h4">Medical History</h4>
                                    <p class="service_home_p">You can see your medical history with the system. Log into the system and then go to your profile </p>
                                </div>
                            </div><!--/.col-md-4-->
                            <div id="home_section_five" class="col-md-4 col-sm-6">
                                <div class="center">
                                    <a href="~/medical-services/all-services"><img class="img-responsive icon-md icon-color5" src="~/Content/HealthConsultAllCSS/img/home-health-care.jpg" /></a>
                                    <h4 class="home_service_h4">Health Consulting</h4>
                                    <p class="service_home_p">We provide health consulting sessions, you can join or use our animated health consulting session</p>
                                </div>
                            </div><!--/.col-md-4-->
                            <div id="home_section_six" class="col-md-4 col-sm-6">
                                <div class="center">
                                    <a href="~/medical-services/all-services"><img class="img-responsive icon-md icon-color2" src="~/Content/HealthConsultAllCSS/img/news.jpg" /></a>
                                    <h4 class="home_service_h4">News</h4>
                                    <p class="service_home_p">Our Latest news and important notifications are here.</p>
                                </div>
                            </div><!--/.col-md-4-->
                        </div><!--/.row-->
                    </div><!--/.box-->
                </div><!--/.container-->
            </section><!--/#services-->
        }
        <!-- #intro -->
        <div class="container body-content ">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
        <!--==========================
          Footer
        ============================-->
        @Html.Action("FooterPartialView", "Home")

        @Scripts.Render("~/bundles/healhConsultJs")
        @RenderSection("scripts", required: false)
        <script>
            $(function () {
                if (window.sessionStorage.activeMenuItem) {
                    $("#" + sessionStorage.activeMenuItem).addClass('active');
                }
            });

            $('ul#SideList li').click(function () {
                window.sessionStorage.activeMenuItem = this.id;
            });

        </script>
    </body>
</html>

