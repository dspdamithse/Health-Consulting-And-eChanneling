@model IEnumerable<Health_Consulting_And_eChanneling.Models.ViewModels.Account.UserViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Doctors/Views/Shared/_Layout.cshtml";
}

<h2>Users List For Doctor</h2>


<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ProfileImage)
        </th>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img style="border-radius: 50%; box-shadow: 0px 0px 100px; border: 1px solid #efc808;" src="~/Content/Registration/Users/@item.Id/Thumbs/@item.ProfileImage" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)

                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a class="btn btn-xs btn-success" href="/Doctors/UserMedicalHostory/Details/@item.Id">See Pass Medical History</a>
            </td>
        </tr>
    }

</table>
