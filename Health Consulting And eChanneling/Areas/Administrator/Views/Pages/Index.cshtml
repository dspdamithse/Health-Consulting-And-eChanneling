@model IEnumerable<Health_Consulting_And_eChanneling.Models.ViewModels.Pages.PageViewModel>

@{
    ViewBag.Title = "Pages";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2 class="sub_page_title">Pages</h2>

<p>
    @Html.ActionLink("Add New Page", "AddPage")
</p>
@if (!Model.Any())
{
    <h2 class="text-center">There are no Pages</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                Sidebar
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
                    @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
                    @if (item.Slug != "home")
                    {
                        @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
                    }
                </td>
            </tr>
        }

    </table>
    @section scripts
    {

        <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
        <script>
        $(function () {
            $("a.delete").click(function () {
                if (!confirm("Are you sure you need to delete this"))
                    return false;
            });
            ////////////////////////////////////////////////////////////////////////

            ////////////////////////////////////////////////////////////////////////

        });
        </script>
    }
}

