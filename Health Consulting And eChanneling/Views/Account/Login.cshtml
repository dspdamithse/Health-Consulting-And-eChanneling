@model Health_Consulting_And_eChanneling.Models.ViewModels.Account.LoginUserViewModel

@{
    ViewBag.Title = "Login";
}

@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()    
    <div class="login_box">
        <h5 style="text-align:left; color: wheat; font-size:22px; font-weight:500">Login</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Username" style="color: wheat;">Username: </label>
            <div class="col-md-10">
                <input class="form-control text-box single-line text-input_login" data-val="true" data-val-required="The Username field is required." id="Username" name="Username" type="text" value="">
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Password" style="color: wheat;">Password: </label>
            <div class="col-md-10">
                <input class="form-control text-input_login" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password">
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="RememberMe" style="color: wheat;">Remember Me</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.RememberMe)
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-info" />
                &nbsp;&nbsp;&nbsp;<a href="/account/create-account">Register</a>
            </div>
        </div>
    </div>
    <div style="height:300px;">

    </div>
}
